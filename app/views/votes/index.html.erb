<h1>Listing votes</h1>

<table>
  <thead>
    <tr>
      <th>Team no</th>
      <th>Point1</th>
      <th>Point2</th>
      <th>Point3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.team_no %></td>
        <td><%= vote.point1 %></td>
        <td><%= vote.point2 %></td>
        <td><%= vote.point3 %></td>
        <td><%= link_to 'Show', vote %></td>
        <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p></p>

<%= link_to 'New Vote', new_vote_path %>
