<h1>総合</h1>

<table class="table table-striped table-layout-fixed">
  <thead>
    <tr>
      <th>順位</th>
      <th>チーム</th>
      <th>総合</th>
      <th>チームワーク</th>
      <th>面白さ</th>
      <th>技術的斬新さ</th>
    </tr>
  </thead>

  <tbody>
    <% number = @vote_summaries.count + 1 %>
    <% @vote_summaries.each do |vote_summary| %>
      <tr>
        <td><%= vote_summary.rank %></td>
        <td>チーム <%= vote_summary.team_no %></td>
        <td><strong><%= vote_summary.total_score %></strong></td>
        <td><%= vote_summary.score1 %></td>
        <td><%= vote_summary.score2 %></td>
        <td><%= vote_summary.score3 %></td>
      </tr>
    <% end %>
  </tbody>
</table>
