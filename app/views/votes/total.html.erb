<div class="well">1位のみ表示されます。</div>

<table class="table table-striped table-layout-fixed">
  <thead>
    <tr>
      <th>順位</th>
      <th>チーム</th>
      <th>投票数</th>
    </tr>
  </thead>

  <tbody>
    <% number = @vote_summaries.count + 1 %>
    <% @vote_summaries.each do |vote_summary| %>
      <tr>
        <td><%= vote_summary.rank %></td>
        <td>チーム <%= vote_summary.team_no %></td>
        <td><%= vote_summary.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag('reset') do %>
  <%= submit_tag 'すべての投票データを削除', :class => "btn btn-danger pull-right", :data => { :confirm => "この操作は取り消せません。よろしいですか？" } %>
<% end %>
